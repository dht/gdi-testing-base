{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/*.ts", "test/*.ts", "src/index.tsx", "src/index.tsx"]
}
